import pandas as pd
import matplotlib.pyplot as plt

pl=['Java','Python','PHP','JavaScript','C#','C++']
p=[22.2,17.6,8.8,7.7,6.7,23.5]
plt.bar(pl,p,color=['k','b','c','m','g','r'])
plt.show()
#2
plt.bar(pl,p,color=['k','b','c','m','g','r'],width=[0.2,0.5,0.6,0.8,2,0.4])
plt.show()
